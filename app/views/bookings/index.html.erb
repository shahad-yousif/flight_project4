<div class="first">
  <%= render 'nave'%>
<p id="notice"><%= notice %></p>

<h1> Bookings</h1>

<table class="table  table-striped  table-hover table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Booking type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.first_name %></td>
        <td><%= booking.last_name %></td>
        <td><%= booking.gender %></td>
        <td><%= booking.date_of_birth %></td>
        <td><%= booking.country %></td>
        <td><%= booking.phone_number %></td>
        <td><%= booking.email %></td>
        <td><%= booking.booking_type %></td>
        <td><%= link_to 'Show', booking, class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path, class:"btn btn-info" %>
</div>
